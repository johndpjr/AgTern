{
  "$schema": "AgTernScrapeConfigSchema.json",
  "company": {
    "name": "Allstate"
  },
  "links": {
    "home": "https://www.allstate.com/",
    "internships": "https://www.allstate.jobs/job-search-results/?level[]=Intern"
  },
  "xpaths": {
    "title": "//div[@class='jobTitle']",
    "posting_link": "//div[@class='jobTitle']/a/@href",
    "category": "//div[@class='jobCategory']",
    "location": "//div[contains(@class,'joblist-location')]",
    "post_date": "//div[contains(@class,'joblist-posdate')]",
    "company_job_id": "//span[@id='gtm-jobdetail-id']",
    "apply_link": "//a[contains(@class,'apply-btn')]/@href",
    "description": "//div[@id='gtm-jobdetail-desc']"
  },
  "unique": [ "posting_link", "company_job_id" ],
  "scrape": [
    {
      "action": "scrape",
      "properties": [
        {
          "name": "title",
          "xpath": "//div[@class='jobTitle']"
        },
        {
          "name": "posting_link",
          "xpath": "//div[@class='jobTitle']/a",
          "html_property": "href",
          "unique": true
        },
        {
          "name": "category",
          "xpath": "//div[@class='jobCategory']"
        },
        {
          "name": "location",
          "xpath": "//div[contains(@class,'joblist-location')]"
        },
        {
          "name": "post_date",
          "xpath": "//div[contains(@class,'joblist-posdate')]"
        }
      ]
    },
    {
      "action": "scrape",
      "link_property": "posting_link",
      "properties": [
        {
          "name": "company_job_id",
          "xpath": "//span[@id='gtm-jobdetail-id']"
        },
        {
          "name": "apply_link",
          "xpath": "//a[contains(@class,'apply-btn')]",
          "html_property": "href"
        },
        {
          "name": "description",
          "xpath": "//div[@id='gtm-jobdetail-desc']"
        },
        {
          "name": "tags",
          "xpath": "//div[@id='gtm-jobdetail-desc']",
          "data_processing": "get_keywords(text)"
        }
      ]
    }
  ]
}
