{
  "$schema": "AgTernScrapeConfigSchema.json",
  "company": {
    "name": "Boeing"
  },
  "links": {
    "home": "https://www.boeing.com/",
    "internships": "https://jobs.boeing.com/category/internship-jobs/185/9287/1"
  },
  "xpaths": {
    "title": "//span[@class='search-results__job-title']",
    "posting_link": "//a[@class='search-results__job-link']/@href",
    "company_job_id": "//a[@class='search-results__job-link']/@data-job-id",
    "location": "//span[@class='search-results__job-info location']",
    "post_date": "//span[@class='search-results__job-info date']",
    "apply_link": "(//a[text()='Apply Now'])[1]/@href",
    "description": "//div[@id='ats-description']",
    "category": "//span[@class='job-description__job-info job-category']"
  },
  "regexes": {
    "category": {
      "pattern": "Category (.*)",
      "group": 1,
      "default": ""
    },
    "description": {
      "pattern": "Job Description(.*)",
      "dot_all": true,
      "group": 1
    }
  },
  "unique": [
    "company_job_id",
    "posting_link"
  ],
  "scrape": [
    {
      "action": "click",
      "xpath": "//a[@class='pagination-show-all']"
    },
    {
      "action": "scrape",
      "properties": [
        {
          "name": "title",
          "xpath": "//ul[contains(@class,'sr-featured-jobs')]/li//a//h3"
        },
        {
          "name": "posting_link",
          "xpath": "//ul[contains(@class,'sr-featured-jobs')]/li//a[contains(@class,'featured-job-')]",
          "html_property": "href",
          "unique": true
        },
        {
          "name": "post_date",
          "xpath": "//ul[contains(@class,'sr-featured-jobs')]/li//a//span[contains(@class,'job-date-posted')]"
        },
        {
          "name": "title",
          "xpath": "//ul[contains(@class,'sr-main-jobs')]/li//a//h3"
        },
        {
          "name": "posting_link",
          "xpath": "//ul[contains(@class,'sr-main-jobs')]/li//a",
          "html_property": "href",
          "unique": true
        },
        {
          "name": "post_date",
          "xpath": "//ul[contains(@class,'sr-main-jobs')]/li//a//span[contains(@class,'job-date-posted')]"
        }
      ]
    },
    {
      "action": "scrape",
      "link_property": "posting_link",
      "properties": [
        {
          "name": "location",
          "xpath": "//span[@class='job-location']"
        },
        {
          "name": "apply_link",
          "xpath": "(//a[contains(@class,'job-apply')])[1]",
          "html_property": "href"
        },
        {
          "name": "company_job_id",
          "xpath": "//span[contains(@class,'job-id')]",
          "regex": {
            "pattern": "(Job ID )(.*)",
            "group": 2
          }
        },
        {
          "name": "description",
          "xpath": "//div[contains(@class,'job-description-wrap')]",
          "regex": {
            "pattern": "(\\n*Job Description\\n*)([\\s\\S]+)(\\n*)",
            "group": 2,
            "multiline": true
          }
        },
        {
          "name": "tags",
          "xpath": "//div[contains(@class,'job-description-wrap')]",
          "data_processing": "get_keywords(text)"
        }
      ]
    }
  ]
}
