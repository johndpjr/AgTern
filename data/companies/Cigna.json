{
  "$schema": "AgTernScrapeConfigSchema.json",
  "company": {
    "name": "Cigna"
  },
  "links": {
    "home": "https://www.cigna.com/",
    "internships": "https://jobs.cigna.com/us/en/search-results?keywords=Intern"
  },
  "xpaths": {
    "next_page": "//a[contains(@class,'next-btn')]",
    "title": "//div[@class='job-title']",
    "posting_link": "//a[@ph-tevent='job_click']/@href",
    "category": "(//span[contains(@class,'category')])[1]",
    "post_date": "//span[contains(@class,'job-postedDate')]",
    "company_job_id": "//span[contains(@class,'jobId')]",
    "apply_link": "(//a[@ph-tevent='apply_click']/@href)[1]",
    "description": "//section[@class='job-description']"
  },
  "regexes": {
    "category": {
      "pattern": "Category\\s+(.*)",
      "group": 1
    },
    "post_date": {
      "pattern": "Posted Date:\\s+(.*)",
      "group": 1
    },
    "company_job_id": {
      "pattern": "Job Id\\s+(.*)",
      "group": 1
    },
    "description": {
      "pattern": "JOB DESCRIPTION\\s+(.*)",
      "group": 1
    }
  },
  "unique": [ "posting_link", "company_job_id" ],
  "scrape": [
    {
      "action": "scrape",
      "next_page": "//a[contains(@class,'next-btn')]",
      "properties": [
        {
          "name": "title",
          "xpath": "//div[@class='job-title']"
        },
        {
          "name": "posting_link",
          "xpath": "//a[@ph-tevent='job_click']",
          "html_property": "href",
          "unique": true
        },
        {
          "name": "category",
          "xpath": "//span[contains(@class,'category')]",
          "regex": {
            "pattern": "(Category\\n)(.*)",
            "group": 2
          }
        },
        {
          "name": "post_date",
          "xpath": "//span[@class='job-postdate']",
          "regex": {
            "pattern": "(Posted Date\\n)(.*)",
            "group": 2
          }
        }
      ]
    },
    {
      "action": "scrape",
      "link_property": "posting_link",
      "properties": [
        {
          "name": "company_job_id",
          "xpath": "//span[contains(@class,'jobId')]",
          "regex": {
            "pattern": "(Job Id\\n)(.*)",
            "group": 2
          }
        },
        {
          "name": "apply_link",
          "xpath": "(//a[@ph-tevent='apply_click'])[1]",
          "html_property": "href"
        },
        {
          "name": "description",
          "xpath": "//section[@class='job-description']"
        },
        {
          "name": "tags",
          "xpath": "//section[@class='job-description']",
          "data_processing": "get_keywords(text)"
        }
      ]
    }
  ]
}
