{
  "$schema": "AgTernScrapeConfigSchema.json",
  "company": {
    "name": "Texas Instruments"
  },
  "links": {
    "home": "https://careers.ti.com/",
    "internships": "https://careers.ti.com/search-jobs/?brand=Interns"
  },
  "xpaths": {
    "title": "//div[contains(@class,'jobTitle')]/a",
    "posting_link": "//div[contains(@class,'jobTitle')]/a/@href",
    "location": "//div[@class='search-results-table']/div/div/div/div/div[@class='flex_column joblist-location fusion-layout-column fusion-one-fourth']",
    "description": "//div[@class='jd-description']",
    "company_job_id": "//div[@class='fusion-text fusion-text-1']//p",
    "apply_link": "//a[contains(@class,'fusion-button button-flat')]/@href"
  },
  "regexes": {
    "title": {
      "pattern": "(.+)",
      "ignore_case": true,
      "default": ""
    },
  },
  "unique": [ "posting_link", "company_job_id" ],
  "scrape": [
    {
      "action": "scroll_to_bottom"
    },
    {
      "action": "scrape",
      "properties": [
        {
          "name": "title",
          "xpath": "//div[contains(@class,'jobTitle')]/a",
          "regex": {
            "pattern": "(.+)",
            "ignore_case": true,
            "default": ""
          }
        },
        {
          "name": "posting_link",
          "xpath": "//div[contains(@class,'jobTitle')]/a/@href",
          "html_property": "href",
          "unique": true
        },
        {
          "name": "location",
          "xpath": "//div[@class='search-results-table']/div/div/div/div/div[@class='flex_column joblist-location fusion-layout-column fusion-one-fourth']"
        }
      ]
    },
    {
      "action": "scrape",
      "link_property": "posting_link",
      "properties": [
        {
          "name": "description",
          "xpath": "//div[@class='jd-description']"
        },
        {
          "name": "tags",
          "xpath": "//div[@class='jd-description']",
          "data_processing": "get_keywords(text)"
        },
        {
          "name": "company_job_id",
          "xpath": "//div[@class='fusion-text fusion-text-1']//p"
        },
        {
          "name": "apply_link",
          "xpath": "//a[contains(@class,'fusion-button button-flat')]",
          "html_property": "href"
        }
      ]
    }
  ]
}
