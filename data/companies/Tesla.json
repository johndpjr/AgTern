{
  "$schema": "AgTernScrapeConfigSchema.json",
  "company": {
    "name": "Tesla"
  },
  "links": {
    "home": "https://www.tesla.com",
    "internships": "https://www.tesla.com/careers/search/?type=3&site=US"
  },
  "xpaths": {
    "title": "//tbody/tr[@class='tds-table-row']/td[1]",
    "year": "//tbody/tr[@class='tds-table-row']/td[1]",
    "period": "//tbody/tr[@class='tds-table-row']/td[1]",
    "posting_link": "//tbody/tr[@class='tds-table-row']/td[1]/a/@href",
    "category": "//tbody/tr[@class='tds-table-row']/td[2]",
    "location": "//tbody/tr[@class='tds-table-row']/td[3]",
    "description": "//div[@class='careers-width-constraint']/div/div[2]",
    "company_job_id": "//tbody/tr[@class='tds-table-row'][3]/td[1]",
    "job_type": "//tbody/tr[@class='tds-table-row'][4]/td[1]",
    "apply_link": "//a[@class='tds-btn'][1]/@href"
  },
  "regexes": {
    "title": {
      "pattern": ".+?intern(ship)?(\\))?",
      "ignore_case": true
    },
    "year": {
      "pattern": "\\d{4}",
      "default": ""
    },
    "period": {
      "pattern": "summer|spring|fall|winter",
      "ignore_case": true,
      "default": ""
    }
  },
  "unique": [ "posting_link", "company_job_id" ],
  "scrape": [
    {
      "action": "scroll_to_bottom"
    },
    {
      "action": "scrape",
      "properties": [
        {
          "name": "title",
          "xpath": "//tbody/tr[@class='tds-table-row']/td[1]",
          "regex": {
            "pattern": ".+?intern(ship)?(\\))?",
            "ignore_case": true
          }
        },
        {
          "name": "year",
          "xpath": "//tbody/tr[@class='tds-table-row']/td[1]",
          "regex": {
            "pattern": "\\d{4}",
            "default": ""
          }
        },
        {
          "name": "period",
          "xpath": "//tbody/tr[@class='tds-table-row']/td[1]",
          "regex": {
            "pattern": "summer|spring|fall|winter",
            "ignore_case": true,
            "default": ""
          }
        },
        {
          "name": "posting_link",
          "xpath": "//tbody/tr[@class='tds-table-row']/td[1]/a",
          "html_property": "href",
          "unique": true
        },
        {
          "name": "category",
          "xpath": "//tbody/tr[@class='tds-table-row']/td[2]"
        },
        {
          "name": "location",
          "xpath": "//tbody/tr[@class='tds-table-row']/td[3]"
        }
      ]
    },
    {
      "action": "scrape",
      "link_property": "posting_link",
      "properties": [
        {
          "name": "description",
          "xpath": "//div[@class='careers-width-constraint']/div/div[2]"
        },
        {
          "name": "tags",
          "xpath": "//div[@class='careers-width-constraint']/div/div[2]",
          "data_processing": "get_keywords(text)"
        },
        {
          "name": "company_job_id",
          "xpath": "//tbody/tr[@class='tds-table-row'][3]/td[1]"
        },
        {
          "name": "job_type",
          "xpath": "//tbody/tr[@class='tds-table-row'][4]/td[1]"
        },
        {
          "name": "apply_link",
          "xpath": "//a[@class='tds-btn'][1]",
          "html_property": "href"
        }
      ]
    }
  ]
}
