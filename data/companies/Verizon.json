{
  "$schema": "AgTernScrapeConfigSchema.json",
  "company": {
    "name": "Verizon"
  },
  "links": {
    "home": "https://mycareer.verizon.com/",
    "internships": "https://mycareer.verizon.com/jobs/?sort_by=cfml10%2Cdesc"
  },
  "xpaths": {
    "title": "//a[@class='stretched-link js-view-job']",
    "posting_link": "//a[@class='stretched-link js-view-job']/@href",
    "category": "//ul/li[@class='list-inline-item'][2]",
    "location": "//ul/li[@class='list-inline-item'][1]",
    "description": "//article[@class='cms-content cms-content--light-text pr-md-5']",
    "company_job_id": "//p[@class='job-meta']",
    "apply_link": "//div[@class='job-sidebar']/div/a/@href"
  },
  "regexes": {
    "title": {
      "pattern": "(.+)",
      "default": ""
    },
    "company_job_id": {
      "pattern": "^Job ID: (.+)$",
      "default": ""
    }
  },
  "unique": [ "posting_link", "company_job_id" ],
  "scrape": [
    {
      "action": "scroll_to_bottom"
    },
    {
      "action": "scrape",
      "properties": [
        {
          "name": "title",
          "xpath": "//a[@class='stretched-link js-view-job']",
          "regex": {
            "pattern": "(.+)",
            "default": ""
          }
        },
        {
          "name": "posting_link",
          "xpath": "//a[@class='stretched-link js-view-job']",
          "html_property": "href",
          "unique": true
        },
        {
          "name": "category",
          "xpath": "//ul/li[@class='list-inline-item'][2]"
        },
        {
          "name": "location",
          "xpath": "//ul/li[@class='list-inline-item'][1]"
        }
      ]
    },
    {
      "action": "scrape",
      "link_property": "posting_link",
      "properties": [
        {
          "name": "description",
          "xpath": "//article[@class='cms-content cms-content--light-text pr-md-5']"
        },
        {
          "name": "tags",
          "xpath": "//article[@class='cms-content cms-content--light-text pr-md-5']",
          "data_processing": "get_keywords(text)"
        },
        {
          "name": "company_job_id",
          "xpath": "//p[@class='job-meta']"
        },
        {
          "name": "apply_link",
          "xpath": "//div[@class='job-sidebar']/div/a",
          "html_property": "href"
        }
      ]
    }
  ]
}
