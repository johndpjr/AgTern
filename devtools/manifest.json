{
  "manifest_version": 3,
  "name": "AgTern DevTools",
  "description": "Assists AgTern developers with writing web scraping code.",
  "version": "1.0",
  "icons": {
    "16": "icons/favicon-16.png",
    "32": "icons/favicon-32.png",
    "48": "icons/favicon-48.png",
    "128": "icons/favicon-128.png"
  },
  "permissions": [
    "<all_urls>",
    "activeTab",
    "contextMenus",
    "sidePanel",
    "scripting",
    "tabs"
  ],
  "action": {
    "default_title": "AgTern DevTools",
    "default_icon": {
      "16": "icons/favicon-16.png",
      "32": "icons/favicon-32.png",
      "48": "icons/favicon-48.png",
      "128": "icons/favicon-128.png"
    }
  },
  "side_panel": {
    "default_path": "src/side_panel.html"
  },
  "sidebar_action": {
    "default_title": "AgTern DevTools",
    "default_panel": "src/side_panel.html",
    "default_icon": {
      "16": "icons/favicon-16.png",
      "32": "icons/favicon-32.png",
      "48": "icons/favicon-48.png",
      "128": "icons/favicon-128.png"
    }
  },
  "background": {
    "service_worker": "src/service_worker.js"
  },
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "src/agtern_devtools.js" ],
      "css": [ "src/agtern_devtools.css" ],
      "world": "MAIN"
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
